\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ifcol}[2024-01-23 v0.0.0 conditionals for one/twocolumn layout]

\newif\ifonecol
\newif\iftwocol

\DeclareOption{onecolumn}{
  \onecoltrue\twocolfalse
}
\DeclareOption{twocolumn}{
  \onecolfalse\twocoltrue
}

\ExecuteOptions{twocolumn}
\ProcessOptions\relax

\NewExpandableDocumentCommand \onecol {+m} {#1}
\NewExpandableDocumentCommand \twocol {+m} {#1}
\ifonecol
  \DeclareExpandableDocumentCommand \twocol {+m} {}
\else
  \DeclareExpandableDocumentCommand \onecol {+m} {}
\fi
