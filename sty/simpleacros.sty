\NeedsTeXFormat{LaTeX2e}
\RequirePackage{expl3}
\ProvidesExplPackage{simpleacros}{2023-08-22}{0.1}{simple acronym definitions for the acro package}

\DeclareOption*{\PassOptionsToPackage \CurrentOption {acro}}

\ProcessOptions*

\RequirePackage{acro}

\cs_new:Nn \keyval_map_function:nN {
  \prop_set_from_keyval:Nn \l_tmpa_prop {#1}
  \prop_map_function:NN \l_tmpa_prop #2
}

\NewExpandableDocumentCommand \SimpleAcro {mm} {
  \DeclareAcronym{#1}{short={\MakeUppercase{#1}},long={#2}}
}

\NewExpandableDocumentCommand \SimpleAcros {m} {
  \keyval_map_function:nN {#1} \SimpleAcro
}

\NewExpandableDocumentCommand \DeclareAcronyms {m} {
  \keyval_map_function:nN {#1} \DeclareAcronym
}
